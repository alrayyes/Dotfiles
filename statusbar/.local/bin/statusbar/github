#!/bin/sh

token=$(getpassword githubnotifications)

case $BLOCK_BUTTON in
1) "$BROWSER" --new-tab https://github.com/notifications ;;
esac

count=$(curl -s -u alrayyes:"$token" https://api.github.com/notifications | jq 'length')

if [ ! "$count" -eq 0 ]; then
    echo "ðŸ¦Š$count"
else
    echo ""
fi
